{
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "type": "ScriptableFilter",
          "config": {
            "type": "application/x-groovy",
            "file": "CorsFilter.groovy"
          }
        },
        {
          "type": "UmaFilterExt",
          "config": {
            "protectionApiHandler": "ClientHandler",
            "umaService": "UmaServiceExt",
            "scopes" : [
              "http://apis.example.net/scopes/write"
            ]
          }
        }
      ],
      "handler": "ClientHandler"
    }
  },
  "baseURI": "http://apis.example.com:8010",
  "condition": "${matches(request.uri.path, '^/history') and (request.headers['scope'][0] == 'write')}"
}
